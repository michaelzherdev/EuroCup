<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/euro_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:shadowColor="@color/textBorderColor"
            android:shadowRadius="2"
            android:textColor="@color/colorAccent"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/euro_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:shadowColor="@color/textBorderColor"
            android:shadowRadius="2"
            android:textColor="@color/colorAccent"
            android:text="@string/euro_location" />

        <ImageView
            android:id="@+id/euro_winner_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Winner`s flag"/>

        <TextView
            android:id="@+id/euro_winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:shadowColor="@color/textBorderColor"
            android:shadowRadius="2"
            android:textColor="@color/colorAccent"
            android:text="@string/euro_winner" />

        <Button
            android:id="@+id/button_play_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_euro_button_marginLeft"
            android:layout_marginRight="@dimen/activity_euro_button_marginRight"
            android:layout_marginBottom="@dimen/activity_euro_button_marginBottom"
            style="@style/AppTheme.Widget.Button.GroupButton"
            android:textAllCaps="true"
            android:text="@string/button_play_off" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/play_off_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/button_group_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_euro_button_marginLeft"
            android:layout_marginRight="@dimen/activity_euro_button_marginRight"
            android:layout_marginTop="@dimen/activity_euro_button_marginBottom"
            android:layout_marginBottom="@dimen/activity_euro_button_marginBottom"
            style="@style/AppTheme.Widget.Button.GroupButton"
            android:textAllCaps="true"
            android:text="@string/button_group_stage"/>

        <LinearLayout
            android:id="@+id/group_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_euro_linear_layout_margin"
            android:layout_marginRight="@dimen/activity_euro_linear_layout_margin"
            android:layout_marginBottom="@dimen/activity_euro_linear_layout_margin"
            android:background="@color/whiteColor"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" />

        <Button
            android:id="@+id/button_wiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_euro_button_marginBottom"
            android:layout_marginLeft="@dimen/activity_euro_button_marginLeft"
            android:layout_marginRight="@dimen/activity_euro_button_marginRight"
            style="@style/AppTheme.Widget.Button.GroupButton"
            android:textAllCaps="true"
            android:text="@string/button_wiki"/>

    </LinearLayout>
</ScrollView>